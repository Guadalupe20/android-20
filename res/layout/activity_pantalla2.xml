<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Pantalla2" >

    <TextView
        android:id="@+id/txttalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputtalla"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:text="@string/etiqueta_talla" />

    <EditText
        android:id="@+id/inputpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputtalla"
        android:layout_centerVertical="true"
        android:ems="10" />

    <Button
        android:id="@+id/btnProcesar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputpeso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="@string/boton_procesar" />

    <TextView
        android:id="@+id/txtpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputpeso"
        android:layout_alignLeft="@+id/inputpeso"
        android:layout_marginBottom="22dp"
        android:text="@string/etiqueta_peso" />

    <EditText
        android:id="@+id/inputtalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttalla"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10" />

</RelativeLayout>